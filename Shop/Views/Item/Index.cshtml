@model IEnumerable<Item>
@{
}

<h2>Items</h2>

<a asp-action="AddItem" asp-controller="Item" class="btn btn-primary">Add More</a>

@if (Model?.Count() > 0)
{
    <table class="table table-striped my-2">
        <tr>
            <th>Image</th>
            <th>Item</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (string.IsNullOrWhiteSpace(item.Image))
                    {
                        <img src="/Images/NoImage.png" style="width:80px;height:100px" alt="item image" />
                    }
                    else
                    {
                        <img src="/images/@item.Image" style="width:80px;height:100px" alt="item image" />
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Category.Name</td>
                <td>@item.Price</td>
                <td>
                    <a asp-action="UpdateItem" asp-controller="Item" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-action="DeleteItem" asp-controller="Item" asp-route-id="@item.Id" class="btn btn-danger" onclick="return window.confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>No records</h3>
}
